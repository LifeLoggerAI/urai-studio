rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Deny all reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow users to write to their own input folder
    match /inputs/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }

    // Allow public read for outputs via a share token
    // This will be enforced by the backend API, not by storage rules directly
    // for this tier, to avoid complex token logic in rules.
  }
}
