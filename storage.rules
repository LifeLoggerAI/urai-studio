rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Raw media can only be read/written by the owner
    match /raw/{uid}/{allPaths=**} {
      allow read, write: if request.auth.uid == uid;
    }

    // Outputs can only be read by the owner, only the system can write
    match /outputs/{uid}/{allPaths=**} {
      allow read: if request.auth.uid == uid;
      allow write: if get(/databases/d/documents/users/$(request.auth.uid)).data.roles.admin == true; // System access is handled by service accounts
    }
  }
}
